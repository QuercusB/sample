<% provide(:title, "Редактирование профиля") %>
<h1>Редактирование профиля</h1>

<div class="row">
	<div class="span6">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name, "Имя пользователя" %>
		    <%= f.text_field :name %>

		    <%= f.label :email, "Адрес электронной почты" %>
		    <%= f.text_field :email %>

		    <%= f.label :password, "Пароль" %>
		    <%= f.password_field :password %>

		    <%= f.label :password_confirmation, "Подтверждение пароля" %>
		    <%= f.password_field :password_confirmation %>

		    <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
		<% end %>
		
		<%= gravatar_for @user %>
   		<a href="http://gravatar.com/emails">Изменить</a>
	</div>
</div>