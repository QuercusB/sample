<% provide(:title, 'Sign up') %>
<h1>Регистрация</h1>

<div class="row">
	<div class="span6 offset10">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name, "Имя пользователя" %>
			<%= f.text_field :name %>

			<%= f.label :email, "Адрес электронной почты" %>
			<%= f.text_field :email %>

			<%= f.label :password, "Пароль" %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Подтверждение пароля" %>
			<%= f.password_field :password_confirmation %>
	
			<%= f.submit "Присоединиться", class: "btn btn-large btn-primery" %>
		<% end %>
	</div>
</div>

